            var x = $(this).is(':checked');
            if (x == true) {
                $('#EmailContent').show();

            }
            else {
                $('#EmailContent').hide();

            }
        });

        var x = $('#EncriptadoEmail').is(':checked');
        if (x == true) {
            $('#EncriptadoContent').show();

        }
        else {
            $('#EncriptadoContent').hide();

        }

