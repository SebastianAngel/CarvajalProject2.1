            $('#CertificadoContent').show();

        }
        else {
            $('#CertificadoContent').hide();

        }

        $("#CertificadoEmail").click(function (event) {
            var x = $(this).is(':checked');
            if (x == true) {
                $('#CertificadoContent').show();

            }
            else {
                $('#CertificadoContent').hide();

            }
        });


        ////////////////////////////////////////////////////////////////////////////////
        var x = $('#Sms').is(':checked');
        if (x == true) {
            $('#SmsContent').show();

        }
        else {
            $('#SmsContent').hide();

        }
        $("#Sms").click(function (event) {
            var x = $(this).is(':checked');
            if (x == true) {
                $('#SmsContent').show();

            }
            else {
                $('#SmsContent').hide();

            }
        });

        ////////////////////////////////////////////////////////////////////////////////
        var x = $('#Fisico').is(':checked');
        if (x == true) {
            $('#FisicoContent').show();

        }
        else {
            $('#FisicoContent').hide();

        }

        $("#Fisico").click(function (event) {
            var x = $(this).is(':checked');
            if (x == true) {
                $('#FisicoContent').show();

            }
            else {
                $('#FisicoContent').hide();

            }
        });

        ////////////////////////////////////////////////////////////////////////////////
        var x = $('#Pdf').is(':checked');
        if (x == true) {
            $('#PdfContent').show();

        }
        else {
            $('#PdfContent').hide();

        }

        $("#Pdf").click(function (event) {
            var x = $(this).is(':checked');
            if (x == true) {
                $('#PdfContent').show();

            }
            else {
                $('#PdfContent').hide();

            }
        });

        ////////////////////////////////////////////////////////////////////////////////
            var x = $('#Publicacion').is(':checked');
            if (x == true) {
                $('#PublicacionContent').show();

            }
            else {
                $('#PublicacionContent').hide();

            }

        $("#Publicacion").click(function (event) {
            var x = $(this).is(':checked');
            if (x == true) {
                $('#PublicacionContent').show();

            }
            else {
                $('#PublicacionContent').hide();

            }
        });

        ////////////////////////////////////////////////////////////////////////////////

    })
</script>
