@using X.PagedList.Mvc.Core
@using X.PagedList
@model IEnumerable<Carvajar_2._1.Models.Data.Solicitud>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<h2>Lista de Solicitudes</h2>
<hr />
<br />
<br />


<div class="container ">
    <table class="table">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Solicitantes</th>
                <th>Cliente</th>
                <th>Cedula</th>
                <th>Tipo</th>
                <th>Caracteristica</th>
                <th>Periodicidad</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Ingeniero</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdSolicitud)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Solicitante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTipoNavigation.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCaracteristicaNavigation.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPeriodicidadNavigation.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEstadoNavigation.Descripcion)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.FechaSolicitud)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.IdIngenieroNavigation.Nombre)
                    </td>

                  
                    <td>
                        <div class="row">

                            <div class="col">
                                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdSolicitud">Editar</a>
                            </div>
                            <div class="col">
                                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdSolicitud">Detalles</a>
                            </div>
                         
                           
                               
                        </div>
                     
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}), new X.PagedList.Web.Common.PagedListRenderOptions{
    LiElementClasses = new string[] {"page-item"},
    PageClasses = new string[] {"page-link"},
    })
</div>
