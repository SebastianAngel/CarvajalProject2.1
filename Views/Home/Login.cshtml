@model Carvajar_2._1.Models.Data.Ingeniero

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
    <link href="~/css/login.css" rel="stylesheet" />

</head>
<body>
    <div class="contenedor">
        <form method="post" asp-action="Login" asp-controller="Home">

            <div class="form-group">
                
                <h1>Login Carvajal Solicitudes</h1>

            </div>
            <div class="form-group">
                <label sp-validation-for="Correo">Correo Electronico</label>
                <input asp-for="Correo" name="Correo" type="text" placeholder="Ingrese su correo">
            </div>

            <div class="form-group">
                <label asp-validation-for="Contraseña">Contraseña</label>
                <input asp-for="Contraseña" name="Contraseña" type="password" placeholder="ingrese su contraseña">
            </div>
            <div class="form-group">

                <input type="submit" name="button" value="Ingresar">
               
            </div>

        </form>
    </div>
</body>
</html>
