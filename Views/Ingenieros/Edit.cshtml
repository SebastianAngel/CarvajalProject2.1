@model Carvajar_2._1.Models.Data.Ingeniero

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Ingeniero</h4>
<hr />


<div >

    <div class="container">
        <div class="row d-flex justify-content-center align-items-center ">
            <div class="col-lg-8 col-xl-7 mt-5 mb-5">
                <div class="card rounded-3">

                    <div class="card-body">
                        <form asp-action="Edit" class="px-md-2">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="IdIngeniero" />
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label">Nombre Completo</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Identificacion" class="control-label"></label>
                                <input asp-for="Identificacion" class="form-control" />
                                <span asp-validation-for="Identificacion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Correo" class="control-label"></label>
                                <input asp-for="Correo" class="form-control" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contraseña" class="control-label"></label>
                                <input asp-for="Contraseña" type="password" class="form-control" />
                                <span asp-validation-for="Contraseña" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Telefono" class="control-label"></label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sede" class="control-label"></label>
                                <input asp-for="Sede" class="form-control" />
                                <span asp-validation-for="Sede" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Rol" class="control-label">Ingeniero</label>
                                <select asp-for="Rol" class="form-control" asp-items="ViewBag.IdIngeniero">
                                    <option selected disabled>---Selecciona una opcion---</option>
                                    <option value="Ingeniero">Ingeniero</option>
                                    <option value="Administrador">Administrador</option>
                                </select>
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-4">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                
                                 <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                              

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
