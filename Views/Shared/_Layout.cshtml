    <link href="~/Content/styles.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand-lg bg-body-tertiary">
        <!-- Navbar Brand-->
        <img src="https://www.carvajal.com/wp-content/uploads/2021/01/Logo-Carvajal-1.svg" class="justify-content-center navbar-brand mx-3" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem; width:9%" alt="Sample photo">
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 text-black order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
            </div>
        </form>
     
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Usuario</a></li>
                    <li><a class="dropdown-item" href="#!">Configuarcion</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("CerrarSesion","Home")">Cerrar Sesion</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav" class="pt-4">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href=" @Url.Action("Index","Solicitudes") ">
                            <div class="sb-nav-link-icon"><i class="fas fa-table-list"></i></div>
                            Solicitudes
                        </a>
                        @if(User.IsInRole("Administrador")){
                           <div class="sb-sidenav-menu-heading">Interfaces</div>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                <div class="sb-nav-link-icon"><i class="fas fa-screwdriver-wrench"></i></div>
                                Herramientas
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" href="@Url.Action("Index","Caracteristica")">Caracteristica</a>
                                    <a class="nav-link" href="@Url.Action("Index","Complejidad")" >Complejidad</a>
                                    <a class="nav-link" href="@Url.Action("Index","Estado")">Estado</a>
                                    <a class="nav-link" href="@Url.Action("Index","Periodicidad")">Periodicidad</a>
                                </nav>
                            </div>
                            <a class="nav-link" href=" @Url.Action("Index","Solicitantes") ">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                Clientes
                            </a>
                            
                        <div class="sb-sidenav-menu-heading">Mantenimiento</div>
                        <a class="nav-link" href="@Url.Action("Index","Ingenieros")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-tie"></i></div>
                            Ingenieros
                        </a>
                        }

                    </div>
                </div>

            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
               
                    @RenderBody()
                
            </main>

        </div>
    </div>

                            @RenderSection("scripts", required: false)

